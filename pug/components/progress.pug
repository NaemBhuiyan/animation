extends ../_skeleton-component

block append variables
  - var firstParent = 'components'              
  - var currentPage = 'progress'
    
block append scripts
  script(src=`${CWD}assets/lib/progressbar.js/progressbar.min.js`)
  
block component
  +PageHeader('Progress')
    p.mt-2 Documentation and examples for using #{theme} custom progress bars featuring support for stacked bars, animated backgrounds, and text labels
    a(href='https://getbootstrap.com/docs/4.3/components/progress/' target='_blank').btn.btn-link.pl-0.btn-sm  Progress on Bootstrap
      span.fas.fa-chevron-right.ml-1.fs--2
  .row.no-gutters
    .col-xl-6.pr-xl-2
      .card.mb-3
        .card-header
          h5.mb-0 Basic Example
        .card-body.bg-light
          +componentCard
            .progress
              .progress-bar(role='progressbar', style='width: 75%', aria-valuenow='75', aria-valuemin='0', aria-valuemax='100')
    .col-xl-6.pl-xl-2
      .card.mb-3
        .card-header
          .h5.mb-0 Label
        .card-body.bg-light
          +componentCard
            .progress
              .progress-bar(role='progressbar', style='width: 50%;', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100') 50%
        
  .card.mb-3
    .card-header
      .h5.mb-0 Height
    .card-body.bg-light
      +componentCard
        .progress(style="height: 1px;").mb-3
          .progress-bar(role='progressbar', style='width: 50%;', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
        
        .progress(style="height: 10px;").mb-3
          .progress-bar(role='progressbar', style='width: 50%;', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
        
        .progress(style="height: 20px;")
          .progress-bar(role='progressbar', style='width: 50%;', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')

  .card.mb-3
    .card-header
      .h5.mb-0 Background
    .card-body.bg-light
      +componentCard
        .progress.mb-3
          .progress-bar.bg-success(role='progressbar', style='width: 20%;', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
        .progress.mb-3
          .progress-bar.bg-info(role='progressbar', style='width: 30%;', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
        .progress.mb-3
          .progress-bar.bg-warning(role='progressbar', style='width: 45%;', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
        .progress.mb-3
          .progress-bar.bg-danger(role='progressbar', style='width: 80%;', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
  .card.mb-3
    .card-header
      .h5.mb-0 Multiple bars
    .card-body.bg-light
      +componentCard
        .progress
          .progress-bar(role='progressbar', style='width: 15%', aria-valuenow='15', aria-valuemin='0', aria-valuemax='100')
          .progress-bar.bg-success(role='progressbar', style='width: 30%', aria-valuenow='30', aria-valuemin='0', aria-valuemax='100')
          .progress-bar.bg-info(role='progressbar', style='width: 20%', aria-valuenow='20', aria-valuemin='0', aria-valuemax='100')
 
  .card.mb-3
    .card-header
      .h5.mb-0 Striped
    .card-body.bg-light
      +componentCard
        .progress.mb-3
          .progress-bar.progress-bar-striped(role='progressbar', style='width: 10%', aria-valuenow='10', aria-valuemin='0', aria-valuemax='100')
        .progress.mb-3
          .progress-bar.progress-bar-striped.bg-success(role='progressbar', style='width: 25%', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
        .progress.mb-3
          .progress-bar.progress-bar-striped.bg-info(role='progressbar', style='width: 50%', aria-valuenow='50', aria-valuemin='0', aria-valuemax='100')
        .progress.mb-3
          .progress-bar.progress-bar-striped.bg-warning(role='progressbar', style='width: 75%', aria-valuenow='75', aria-valuemin='0', aria-valuemax='100')
        .progress.mb-3
          .progress-bar.progress-bar-striped.bg-danger(role='progressbar', style='width: 100%', aria-valuenow='100', aria-valuemin='0', aria-valuemax='100')

  .card
    .card-header
      .h5.mb-0 Animated
    .card-body.bg-light
      .progress
        .progress-bar.progress-bar-striped#progress-toggle(role='progressbar', aria-valuenow='75', aria-valuemin='0', aria-valuemax='100', style='width: 75%')
      button.btn.btn-secondary.btn-sm.mt-2#progress-toggle-animation(type='button') Toggle Animation
      +componentCardLib
        .progress
          .progress-bar.progress-bar-striped.progress-bar-animated(role='progressbar', aria-valuenow='75', aria-valuemin='0', aria-valuemax='100', style='width: 75%')
