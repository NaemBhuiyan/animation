extends ../_skeleton-component

block append variables
  - var firstParent = 'components'              
  - var currentPage = 'tables'
 
block append content
  +PageHeader('Tables')
    p.mt-2 Documentation and examples for opt-in styling of tables with #{theme}.
    a(href='https://getbootstrap.com/docs/4.3/content/tables/' target='_blank').btn.btn-link.pl-0.btn-sm  Tables on Bootstrap
      span.fas.fa-chevron-right.ml-1.fs--2

  .row.no-gutters
