          +componentCard
            table.table
              thead
                tr
                  th(scope='col') #
                  th(scope='col') First
                  th(scope='col') Last
                  th.white-space-nowrap(scope='col') Handle
              tbody
                tr
                  th(scope='row') 1
                  td Steven
                  td Speilberg
