extends ../_skeleton-component

block append variables
  - var firstParent = 'components'              
  - var currentPage = 'dropdowns'

block component
  +PageHeader('Dropdown')
    p.mt-2 Toggle contextual overlays for displaying lists of links and more with the #{theme} dropdown plugin.
    a(href='https://getbootstrap.com/docs/4.3/components/dropdowns/' target='_blank').btn.btn-link.pl-0.btn-sm  Dropdown on Bootstrap
      span.fas.fa-chevron-right.ml-1.fs--2
  .card.mb-3
    .card-header
      h5.mb-0 Example
    .card-body.bg-light
      +componentCard
        .dropdown.text-sans-serif
          button#dropdownMenuButton.btn.btn-falcon-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') Dropdown button
          .dropdown-menu.dropdown-menu-right.py-0(aria-labelledby='dropdownMenuButton')
            +CardUserPreferences
