extends ../_skeleton-component

block append variables
  - var firstParent = 'utilities'
  - var currentPage = 'close-icon'
  -
    var pageHeader = {
      title: 'Close icon',
      description: 'Use a generic close icon for dismissing content like modals and alerts.',
      url: `https://getbootstrap.com/docs/${bootstrapVersion}/components/close-icon/`,
      linkText: 'close-icon on Bootstrap'
    }

block component
  .card.mb-3.shadow-sm
    .card-body
      +PageHeader(pageHeader)
    
  .row
    .col-12
      .card.mb-3.shadow-sm
        .card-header 
          h5.mb-0 Example
          p.mb-0
            strong Be sure to include text for screen readers
            | , as we’ve done with 
            code aria-label.
        .card-body.bg-light
          +componentCard
            button.close.float-none(type='button', aria-label='Close')
              = '\n'
              span(aria-hidden='true') ×
              = '\n'


