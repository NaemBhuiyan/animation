extends ../_skeleton-component

block append variables
  - var firstParent = 'utilities'              
  - var currentPage = 'colors'

block component
  +PageHeader('Colors')
    p.mt-2 Convey meaning through color with a handful of color utility classes. Includes support for styling links with hover states, too.
    a(href='https://getbootstrap.com/docs/4.3/utilities/colors/' target='_blank').btn.btn-link.pl-0.btn-sm  Colors on Bootstrap
      span.fas.fa-chevron-right.ml-1.fs--2
  
  .card.mb-3
    .card-header
      h5.mb-0 Theme colors
    .card-body.bg-light
      .row.no-gutters
        each val in colors
          .col-6.col-sm-4.col-lg-3
            .p-3(class=`bg-${val}` style='height: 180px')
              code(class=`${val !== 'light' ? 'text-white' : 'text-black'}`) .text-#{val}
              br
              code(class=`${val !== 'light' ? 'text-white' : 'text-black'}`) .bg-#{val}
  .card.mb-3
    .card-header
      h5.mb-0 Gray shades
    .card-body.bg-light
      .row.no-gutters
        each val, index in grays
          .col-6.col-sm-4.col-lg-3
            .p-3(class=`bg-${val} ${val === 'white' && 'border border-300'}` style='height: 180px')
              code(class=`${(index < 8) ? 'text-white' : 'text-black'}`) .text-#{val}
              br
              code(class=`${index < 8 ? 'text-white' : 'text-black'}`) .bg-#{val}
