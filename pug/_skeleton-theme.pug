          remodal: 'remodal',
          select2: 'select2',
          tinymce: 'tinymce',
          'typed-text': 'typed-text'
        }
      },
      documentation: {
        icon: 'fas fa-book',
        inners: {
          'getting-started': 'getting-started',
          'file-structure': 'file-structure',
          customization: 'customization',
          'fluid-layout': 'fluid-layout',
          gulp: 'gulp',
          RTL: 'RTL',
          plugins: 'plugins',
        }
      },
      changelog: {
        icon: 'fas fa-code-branch',
        link: 'changelog',
        badge: {
          text: version,
          type: 'primary'
        }
      }
    };


