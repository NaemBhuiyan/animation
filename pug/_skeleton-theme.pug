          carousel: 'carousel',
          collapse: 'collapse',
          countup: 'countup',
          dropdowns: 'dropdowns',
          fancyscroll: 'fancyscroll',
          fancytab: 'fancytab',
          forms: 'forms',
          hoverbox: 'hoverbox',
          'list-group': 'list-group',
          modals: 'modals',
          'media-object': 'media-object',
          navs: 'navs',
          navbar: 'navbar',
          'page-headers': 'page-headers',
          pagination: 'pagination',
          popovers: 'popovers',
          progress: 'progress',
          scrollspy: 'scrollspy',
          tables: 'tables',
          tabs: 'tabs',
          tooltips: 'tooltips',
        }
      },
      utilities: {
        icon: 'fab fa-hotjar',
        inners: {
          borders: 'borders',
          colors: 'colors',
          grid: 'grid',
          sizing: 'sizing',
          spacing: 'spacing',
          typography: 'typography'
        }
      },
      plugins: {
        icon: 'fas fa-plug',
        inners: {
          accordion: 'accordion',
          charts: 'charts',
          countdown: 'countdown',
          'data-table': 'data-table',
          'date-picker': 'date-picker',
