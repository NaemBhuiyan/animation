extends ../_skeleton-component


block append variables
  - var firstParent = 'plugins'              
  - var currentPage = 'select2'
  - var countries = ["Afghanistan", "Albania", "Algeria", "American Samoa"]


block append styles
  link(href=`${CWD}assets/lib/select2/select2.min.css`, rel='stylesheet')
block append scripts
  script(src=`${CWD}assets/lib/select2/select2.min.js`)

block component
  +PageHeader('Select2')
    p.mt-2 Select2 gives you a customizable select box with support for searching, tagging, remote data sets, infinite scrolling, and many other highly used options.
    a(href='https://select2.org/' target='_blank').btn.btn-link.pl-0.btn-sm  Select2 documentation
      span.fas.fa-chevron-right.ml-1.fs--2
  .card.mb-3
    .card-header
      h5.mb-0 Stylesheet
    .card-body.bg-light
      +componentCardLib
        link(href=`assets/lib/select2/select2.min.css`, rel='stylesheet')
  .card.mb-3
    .card-header
      h5.mb-0 Javascript
    .card-body.bg-light
      +componentCardLib
        script(src=`assets/lib/select2/select2.min.js`)
  
  .row.no-gutters
    .col-lg-6.pr-lg-2
      .card.mb-3
        .card-header
          h5.mb-0 Basic Example
        .card-body.bg-light
          +componentCard
            .form-group
              = '\n'
              label(for="basic-example") Select an option
              = '\n'
              select.selectpicker#basic-example
                each country in countries
                  option=country
              = '\n'
    .col-lg-6.pl-lg-2
      .card.mb-3
        .card-header
          h5.mb-0 Multiple Select
        .card-body.bg-light
          +componentCard
            .form-group
              = '\n'
              label(for="multiple-select") Select options
              = '\n'
              select.selectpicker#multiple-select(multiple data-options!={placeholder: 'Click to select your options'})
                each country in countries
                  option=country
              = '\n'
      
