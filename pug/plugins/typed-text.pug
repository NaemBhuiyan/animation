extends ../_skeleton-component

block append variables
  - var firstParent = 'plugins'              
  - var currentPage = 'typed-text'
 
block append scripts
  script(src=`${CWD}assets/lib/typed.js/typed.js`)

block component
  +PageHeader('Typed Text')
    p.mt-2 A JavaScript library that types out, deletes them, and then types again.
    a(href='https://mattboldt.com/demos/typed-js/' target='_blank').btn.btn-link.pl-0.btn-sm  Typed.js Documentation
      span.fas.fa-chevron-right.ml-1.fs--2
  .card.mb-3
    .card-header
      h5.mb-0 Example
    .card-body.bg-light
      +componentCard
        h3.font-weight-light.overflow-hidden A smarter way to tell about 
          span.typed-text.font-weight-bold.ml-1(data-typed-text!=["new features.", "product updates.", "a new idea.", "an announcment."])
  .card.mb-3
    .card-header
      h5.mb-0 JavaScript
    .card-body.bg-light
      +componentCardLib
        script(src="assets/lib/typed.js/typed.js")
